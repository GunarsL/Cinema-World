@*Define Model*@

@model ActorModel

@*Define ViewData*@

@{
    ViewData["Title"] = "Delete Actor";
}

@*Write code*@

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Confirm deletion of @Model.FirstName @Model.MiddleName @Model.LastName!</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" readonly/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" class="form-control" readonly />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" readonly />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BirthYear" class="control-label"></label>
                        <input asp-for="BirthYear" class="form-control" readonly />
                        <span asp-validation-for="BirthYear" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BirthPlace" class="control-label"></label>
                        <input asp-for="BirthPlace" class="form-control" readonly />
                        <span asp-validation-for="BirthPlace" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ActorID" />
                            <input type="submit" value="Confirm" class="btn btn-outline-danger float-end" />
                        </form>
                        <a class="btn btn-outline-dark" asp-action="Index">Show all</a>
                    </div>


            </div>
        </div>
    </div>
</div>
